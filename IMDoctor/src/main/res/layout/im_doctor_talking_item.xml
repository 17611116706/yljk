<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingTop="9dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/im_doctor_patientstalking_img"
        android:layout_marginRight="14dp"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/im_doctor_persion"
        ></ImageView>
    <TextView
        android:maxWidth="260dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="14dp"
        android:text="@string/im_doctor_interrogationer_talking"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@id/im_doctor_patientstalking_img"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/im_doctor_talking_itemstyle"
        ></TextView>



</RelativeLayout>